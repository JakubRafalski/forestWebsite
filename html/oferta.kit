<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="Poznaj najpiękniejszy park w Twojej okolicy! Dowiedz się więcej o naszej firmie - Forest Group.">
    <title>Forest | Oferta</title>
    <!-- @include "_styles.kit" -->
</head>

<body>
    <!-- @include "_nav.kit" -->

    <header class="header" id="home">
        <div class="header__box wrapper">
            <p class="header__box-text">Forest Group</p>
            <h2 class="header__box-title">Znajdź to, co przemawia do Ciebie</h2>
        </div>
    </header>



    <main>
        <section class="section offer" id="offer">
            <div class="wrapper">
                <h2 class="section__heading"></h2>

                <div class="offer__box">

                </div>
            </div>
        </section>

        <section class="achievements" id="achievements">

        </section>




        <section class="section cards" id="cards">
            <div class="wrapper">
                <h2 class="section__heading">Oferta</h2>

                <p class="offer__subtitle">Wybierz jedną z naszych wspaniałych ofert!</p>

                <div class="offer__cards">
                    <div class="offer__card">
                        <p class="offer__card-title">Demo</p>
                        <p class="offer__card-price">$0</p>
                        <ul>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja w pakiecie
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja w pakiecie
                            </li>
                            <li class="offer__card-element no-active"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                            <li class="offer__card-element no-active"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                            <li class="offer__card-element no-active"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                        </ul>
                        <div class="offer__card-button">Wybierz</div>
                    </div>

                    <div class="offer__card">
                        <p class="offer__card-title">Standart</p>
                        <p class="offer__card-price">$99</p>
                        <ul>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja w pakiecie
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja w pakiecie
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja poza pakietem
                            </li>
                            <li class="offer__card-element no-active"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                            <li class="offer__card-element no-active"><i class="fa-solid fa-minus"></i> opcja poza
                                pakietem</li>
                        </ul>
                        <div class="offer__card-button--popular">Wybierz</div>
                    </div>

                    <div class="offer__card">
                        <p class="offer__card-title">Premium</p>
                        <p class="offer__card-price">$299</p>
                        <ul>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja w pakiecie
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja w pakiecie
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja poza pakietem
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja poza pakietem
                            </li>
                            <li class="offer__card-element"><i class="fa-solid fa-check active"></i> opcja poza pakietem
                            </li>
                        </ul>
                        <div class="offer__card-button ">Wybierz</div>
                    </div>
                </div>

            </div>
        </section>
    </main>

    <!-- @include "_footer.kit" -->

    <script src="./dist/js/scrollspy.min.js"></script>
    <script src="./dist/js/main.min.js"></script>
</body>

</html>